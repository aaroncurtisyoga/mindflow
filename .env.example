# ===========================================
# Mindflow - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Database (Supabase Postgres via Prisma)
# Get these from your Supabase project → Settings → Database
DATABASE_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres"

# Auth.js
# Generate with: openssl rand -base64 32
AUTH_SECRET=""
# Your Gmail address — only this email can log in
ALLOWED_EMAIL=""

# Supabase (for Realtime subscriptions)
# Get these from your Supabase project → Settings → API
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY=""

# Anthropic (for AI quick actions - uses Claude Max credits)
ANTHROPIC_API_KEY=""

# Google OAuth (optional - for Drive/Calendar/Gmail)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# App URL (for Google OAuth redirect)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# MCP Remote Server (OAuth credentials for HTTP endpoint at /api/mcp)
# Generate with: openssl rand -hex 16 (client ID) and openssl rand -hex 32 (secret)
# Enter these in Claude.ai → Settings → Connectors → Add custom connector
MCP_CLIENT_ID=""
MCP_CLIENT_SECRET=""
